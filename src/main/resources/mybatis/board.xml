<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.board.mapper.BoardMapper">

	<resultMap type="board" id="board">
		<result column="code" property="code" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="writer" property="writer" />
		<result column="reg_datetime" property="reg_datetime" />
	</resultMap>

	<resultMap type="board" id="listBoard" extends="board">
		<result column="likes" property="like" />
		<result column="comments" property="comment" />
	</resultMap>

	<resultMap type="board" id="viewBoard" extends="board">
		<collection property="fileInfos" column="code"
			javaType="list" ofType="fileInfo" select="fileInfoList" />
	</resultMap>

	<resultMap type="fileInfo" id="file">
		<result column="save_folder" property="saveFolder" />
		<result column="original_file" property="originalFile" />
		<result column="save_file" property="saveFile" />
	</resultMap>

	<select id="getBoardList" resultMap="listBoard">
		select * , (select count(id)
		from board_like where board_code=code) as likes,
		(select count(id) from comment where board_code=code) as comments
		from board
	</select>

	<select id="isLike" resultType="int">
		select count(*) from board_like
		where board_code = #{code} and member_id = #{member_id}
	</select>

	<select id="selectOne" resultMap="viewBoard" parameterType="int">
		select *
		from board where code = #{code};
	</select>

	<select id="fileInfoList" resultMap="file">
		select save_folder,
		original_file, save_file
		from file_info
		where code = #{code}
	</select>

	<insert id="writeBoard" parameterType="board">
		insert into board(writer, title, content)
		values(#{writer}, #{title},#{content})
		<selectKey resultType="int" keyProperty="code" order="AFTER">
			select
			last_insert_id()
		</selectKey>
	</insert>

	<insert id="createFile" parameterType="board">
		insert into file_info (code, save_folder, original_file, save_file)
		values
		<foreach collection="fileInfos" item="fileinfo"
			separator=" , ">
			(#{code}, #{fileinfo.saveFolder}, #{fileinfo.originalFile},
			#{fileinfo.saveFile})
		</foreach>
	</insert>


	<update id="modifyBoard">
		update board
		set title =#{title}, content = #{content}
		where code = #{code}
	</update>

	<delete id="deleteBoard" parameterType="int">
		delete from board
		where
		code = #{code}
	</delete>

	<insert id="likeUp">
		insert into board_like (board_code , member_id)
		values(#{board_code},#{member_id})
	</insert>

	<delete id="likeDown">
		delete from board_like
		where board_code =#{board_code} and member_id = #{member_id}
	</delete>

</mapper>